# Need 6.12 kernel from rawhide
FROM fedora:rawhide
COPY extra /
COPY cfsctl /usr/bin
RUN --mount=type=cache,target=/var/cache/libdnf5 <<EOF
    set -eux
    dnf --setopt keepcache=1 install -y systemd util-linux skopeo composefs strace dosfstools kernel
    systemctl enable systemd-networkd
    passwd -d root
    mkdir /sysroot
    mkdir /composefs-meta
    mv /boot /composefs-meta
    mkdir /boot
EOF
RUN true  # hack to get an extra layer
